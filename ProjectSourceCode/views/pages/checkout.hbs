<main>
    <div class="row justify-content-between">
        <div class="col-5 py-4 mb-5">
            <h1>Checkout</h1>

            <form class="py-4">
                <h3>Contact</h3>
                <div class="form-floating my-3">
                    <input type="email" class="form-control" id="checkoutEmail" placeholder="email">
                    <label for="checkoutEmail">Email address</label>
                </div>

                {{!-- Delivery --}}
                <h3 class="mt-5 mb-3">Delivery</h3>
                <div class="input-group">
                    <div class="form-floating my-2">
                        <input id="firstNameLabel" type="text" class="form-control" placeholder="firstName">
                        <label for="firstNameLabel">First name</label>
                    </div>
                    <div class="form-floating my-2">
                        <input id="firstNameLabel" type="text" class="form-control" placeholder="lastName">
                        <label for="firstNameLabel">Last name</label>
                    </div>
                </div>
                <select class="form-select form-select-md p-3 my-2" aria-label="Default select example">
                    <option selected>Country/Region</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="addressLabel" placeholder="address">
                    <label for="addressLabel">Address</label>
                </div>
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="address2Label" placeholder="address2">
                    <label for="address2Label">Address 2 (optional)</label>
                </div>
                <div class="input-group">
                    <div class="form-floating my-2">
                        <input id="cityLabel" type="text" class="form-control" placeholder="city">
                        <label for="cityLabel">City</label>
                    </div>
                    <div class="form-floating my-2">
                        <input id="stateLabel" type="text" class="form-control" placeholder="state">
                        <label for="stateLabel">State</label>
                    </div>
                    <div class="form-floating my-2">
                        <input id="zipLabel" type="number" class="form-control" placeholder="zip">
                        <label for="zipLabel">Zip Code</label>
                    </div>
                </div>

                {{!-- Shipping --}}
                <h3 class="mt-5 mb-3">Shipping</h3>
                <div class="card" style="height:auto">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radioDefault" id="econRadio">
                                    <label class="form-check-label" for="econRadio">
                                        <h5 class="mx-3">Economy</h5>
                                        <small class="text-muted mx-3">Ships in 5-7 business days</small>
                                    </label>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radioDefault" id="expressRadio">
                                    <label class="form-check-label" for="expressRadio">
                                        <h5 class="mx-3">Express</h5>
                                        <small class="text-muted mx-3">Ships in 1-3 business days</small>
                                    </label>
                                </div>
                            </li>
                        </ul>

                    </div>
                </div>

            </form>

        </div>

        {{!-- Cart --}}
        <div class="col-4 py-4 mb-5">
            <h2 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your Cart</span>
                <span class="badge text-bg-secondary rounded-pill">3</span>
            </h2>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div class="mx-1">
                        <h5 class="my-0 ">Product name</h5>
                        <small class="text-muted">Description</small>
                    </div>
                    <span class="text-muted">$12</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div class="mx-1">
                        <h5 class="my-0 ">Product name</h5>
                        <small class="text-muted">Description</small>
                    </div>
                    <span class="text-muted">$12</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div class="mx-1">
                        <h5 class="my-0 ">Product name</h5>
                        <small class="text-muted">Description</small>
                    </div>
                    <span class="text-muted">$12</span>
                </li>

                {{!-- Total calculations --}}
                <li class="list-group-item d-flex justify-content-between p-4">
                    <span><h4>Total (USD)</h4></span>
                    <h5><strong>$20</strong></h5>
                </li>
            </ul>
        </div>
</main>
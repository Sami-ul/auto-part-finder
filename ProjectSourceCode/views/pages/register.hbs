<main>
    <div class="login-container">
        <div class="form-signin">
            {{> message}}
            <form action="/register" method="POST">
                <h3>Create an account</h3>
                <div class="form-floating mb-2">
                    <input name="email" type="email" class="form-control" id="floatEmail" placeholder="email">
                    <label for="floatEmail">Email</label>
                </div>
                <div class="form-floating mb-2">
                    <input name="username" type="text" class="form-control" id="floatUser" placeholder="username">
                    <label for="floatUser">Username</label>
                </div>
                <div class="form-floating">
                    <input name="password" type="password" class="form-control" id="floatPass" placeholder="password">
                    <label for="floatPass">Password</label>
                </div>
                <button class="btn btn-primary py-2 my-4" type="submit" name="login">Register</button>
                <p>Already have an account? Please <a href="/login">login</a> with your account.</p>
            </form>
        </div>
    </div>
</main>
